<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Categoría del módulo -->
        <record model="ir.module.category" id="module_category_openrol_school">
            <field name="name">Escuela</field>
            <field name="description">Gestiona escuelas, profesores y estudiantes.</field>
            <field name="sequence">7</field>
        </record>

        <!-- Grupo para profesores -->
        <record id="group_school_teacher" model="res.groups">
            <field name="name">Profesor</field>
            <field name="category_id" ref="module_category_openrol_school"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Grupo para administradores escolares -->
        <record id="group_school_manager" model="res.groups">
            <field name="name">Administrador</field>
            <field name="category_id" ref="module_category_openrol_school"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[
                (4, ref('base.user_root')),
                (4, ref('base.user_admin'))
            ]"/>
        </record>

        <!-- Regla para res.partner impedir que los profesores puedan ver alumnos y colegios en donde no esta asignado -->
        <record id="partner_school_rule" model="ir.rule">
            <field name="name">Partner: School Access Rule</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[
                '|',
                '|',
                '|',
                ('user_ids', '!=', False),
                '&amp;',
                ('is_school', '=', False),
                ('is_student', '=', False),
                '&amp;',
                ('is_school', '=', True),
                ('id', 'in', user.school_ids.ids),
                '&amp;',
                ('is_student', '=', True),
                ('school_id', 'in', user.school_ids.ids)
                ]
            </field>
            <field name="groups" eval="[(4, ref('group_school_teacher'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Profesores solo pueden modificar su propio employee y ver los demas -->

        <!--Teachers can only read teachers in the same school-->
        <record id="employee_teacher_read_rule" model="ir.rule">
            <field name="name">Employee: View Teachers of Own Schools</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[
                ('is_teacher', '=', True),
                ('school_ids', 'in', user.school_ids.ids),
                ]
            </field>
            <field name="groups" eval="[(4, ref('group_school_teacher'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
        </record>

        <!-- Teachers can edit their own hr.employee registry -->
        <record id="employee_teacher_edit_own_rule" model="ir.rule">
            <field name="name">Employee: Edit own registry</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="domain_force">[
                ('user_partner_id', '=', user.partner_id.id)
                ]
            </field>
            <field name="groups" eval="[(4, ref('group_school_teacher'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="partner_attendance_rule" model="ir.rule">
            <field name="name">Attendance: School Access Rule</field>
            <field name="model_id" ref="model_oe_attendance"/>
            <field name="domain_force">
                [
                '|',
                '&amp;',
                ('teacher_ids', 'in', [user.employee_id.id]),
                ('school_id', 'in', user.school_ids.ids),
                ('substitute_teacher_ids', 'in', [user.employee_id.id])
                ]
            </field>
            <field name="groups" eval="[(4, ref('group_school_teacher'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>


        <record id="partner_assessment_rule" model="ir.rule">
            <field name="name">Assessment: School Access Rule</field>
            <field name="model_id" ref="model_oe_assessment"/>
            <field name="domain_force">[('teacher_ids', 'in', [user.employee_id.id]), ('school_id', 'in',
                user.school_ids.ids)]
            </field>
            <field name="groups" eval="[(4, ref('group_school_teacher'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>
    </data>
</odoo>