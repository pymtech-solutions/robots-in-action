<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Categoría del módulo -->
        <record model="ir.module.category" id="module_category_openrol_school">
            <field name="name">Escuela</field>
            <field name="description">Gestiona escuelas, profesores y estudiantes.</field>
            <field name="sequence">7</field>
        </record>

        <!-- Group for professors -->
        <record id="group_school_teacher" model="res.groups">
            <field name="name">Profesor</field>
            <field name="category_id" ref="module_category_openrol_school"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <!-- Group for school manager -->
        <record id="group_school_manager" model="res.groups">
            <field name="name">Administrador</field>
            <field name="category_id" ref="module_category_openrol_school"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user')), (4, ref('group_school_teacher'))]"/>
            <field name="users" eval="[
                (4, ref('base.user_root')),
                (4, ref('base.user_admin'))
            ]"/>
        </record>

        <!-- Regla para res.partner impedir que los profesores puedan ver alumnos y colegios en donde no esta asignado -->
        <record id="partner_school_rule" model="ir.rule">
            <field name="name">Partner: School Access Rule</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[
                '|',
                '|',
                '|',
                ('user_ids', '!=', False),
                '&amp;',
                ('is_school', '=', False),
                ('is_student', '=', False),
                '&amp;',
                ('is_school', '=', True),
                ('id', 'in', user.school_ids.ids),
                '&amp;',
                ('is_student', '=', True),
                ('school_id', 'in', user.school_ids.ids)
            ]
            </field>
            <field name="groups" eval="[(4, ref('group_school_teacher'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Managers can see and interact with all schools  -->
        <record id="partner_school_manager_rule" model="ir.rule">
            <field name="name">Partner: Manager can see all schools</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_school_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!--Teachers can only see attendances where they are assigned-->
        <record id="attendance_teacher_rule" model="ir.rule">
            <field name="name">Attendance: Teacher Own Records</field>
            <field name="model_id" ref="model_school_attendance"/>
            <field name="domain_force">
                [
                    '|',
                    '&amp;',
                    ('teacher_ids', 'in', [user.employee_id.id]),
                    ('school_id', 'in', user.school_ids.ids),
                    ('substitute_teacher_ids', 'in', [user.employee_id.id])
                ]
            </field>
            <field name="groups" eval="[(4, ref('group_school_teacher'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!--Administrators can see all attendances-->
        <record id="attendance_manager_rule" model="ir.rule">
            <field name="name">Attendance: Manager Full Access</field>
            <field name="model_id" ref="model_school_attendance"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_school_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Regla para oe.attendance.line: profesores solo ven registros de su colegio y cursos asignados -->
        <record id="attendance_line_teacher_rule" model="ir.rule">
            <field name="name">Attendance Line: Teacher Access Rule</field>
            <field name="model_id" ref="model_school_attendance_line"/>
            <field name="domain_force">
                [
                    # '&amp;',
                    ('school_id', 'in', user.school_ids.ids),
                    # ('course_id', 'in', user.employee_id.course_line_ids.ids)
                ]
            </field>
            <field name="groups" eval="[(4, ref('group_school_teacher'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Regla para oe.attendance.line: administradores ven todos los registros -->
        <record id="attendance_line_manager_rule" model="ir.rule">
            <field name="name">Attendance Line: Manager can see all records</field>
            <field name="model_id" ref="model_school_attendance_line"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_school_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Regla para oe.course.line: profesores solo ven sus líneas de curso asignadas -->
        <record id="course_line_teacher_rule" model="ir.rule">
            <field name="name">Course Line: Teacher Access Rule</field>
            <field name="model_id" ref="model_school_course_line"/>
            <field name="domain_force">[('teacher_ids', 'in', [user.employee_id.id]),
                                        ('school_id', 'in', user.school_ids.ids)]</field>
            <field name="groups" eval="[(4, ref('group_school_teacher'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Regla para oe.course.line: administradores ven todas las líneas de curso -->
        <record id="course_line_manager_rule" model="ir.rule">
            <field name="name">Course Line: Manager Full Access</field>
            <field name="model_id" ref="model_school_course_line"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_school_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>
    </data>
</odoo>