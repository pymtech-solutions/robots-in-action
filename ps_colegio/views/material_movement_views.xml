<odoo>
    <record id="material_movement_list_view" model="ir.ui.view">
        <field name="name">material.movement.list.view</field>
        <field name="model">oe.material.movement</field>
        <field name="arch" type="xml">
            <list default_group_by="date">
                <field name="date"/>
                <field name="box_id"/>
                <field name="attendance_id"/>
                <field name="product_id"/>
                <field name="movement_type"/>
                <field name="quantity_lost"/>
                <field name="quantity_refilled"/>
                <field name="school_id"/>
            </list>
        </field>
    </record>

    <record id="material_movement_form_view" model="ir.ui.view">
        <field name="name">material.movement.form.view</field>
        <field name="model">oe.material.movement</field>
        <field name="arch" type="xml">
            <form string="Movimiento de Material">
                <group>
                    <group>
                        <field name="box_id"/>
                        <field name="attendance_id"/>
                        <field name="product_id"/>
                        <field name="movement_type"/>
                    </group>
                    <group>
                        <field name="quantity_before"/>
                        <field name="quantity_after"/>
                        <field name="quantity_lost"/>
                        <field name="quantity_refilled"/>
                        <field name="date"/>
                    </group>
                </group>
                <field name="notes" placeholder="Observaciones sobre el movimiento..."/>
            </form>
        </field>
    </record>

    <!-- Action para Material Movements -->
    <record id="material_movement_action" model="ir.actions.act_window">
        <field name="name">Movimientos de Materiales</field>
        <field name="res_model">oe.material.movement</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>