<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Modified list view form product search to include the product image -->
    <record id="product_product_tree_view_inherit" model="ir.ui.view">
        <field name="name">product.product.tree.view.inherit</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                <field name="image_128" string="Imagen" widget="image" options="{'size': [60, 60]}" optional="show"/>
            </field>
        </field>
    </record>
</odoo>
