<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Course -->
        <record id="school_course_tree_view" model="ir.ui.view">
            <field name="name">school.course.tree.view</field>
            <field name="model">oe.school.course</field>
            <field name="arch" type="xml">
                <list string="Courses">
                    <field name="display_name"/>
                    <field name="color" widget="color_picker"/>
                </list>
            </field>
        </record>

        <!-- Vista de formulario para Course Line -->
        <record id="course_line_form_view" model="ir.ui.view">
            <field name="name">oe.school.course.line.form</field>
            <field name="model">oe.school.course.line</field>
            <field name="arch" type="xml">
                <form string="Línea de Curso">
                    <sheet>
                        <!-- Título dinámico -->
                        <div class="oe_title">
                            <h1>
                                <field name="display_name" readonly="1"
                                       placeholder="Se generará automáticamente"/>
                            </h1>
                        </div>
                        <group>
                            <!-- Información básica -->
                            <group string="Información Básica" name="basic_info">
                                <field name="school_id"
                                       options="{'no_create': True, 'no_create_edit': True}"
                                       required="1"/>
                                <field name="course_id"
                                       options="{'no_create': True, 'no_create_edit': True}"
                                       required="1"/>
                                <field name="program_id"
                                       domain="[('id', 'in', related_program_ids)]"
                                       options="{'no_create': True, 'no_create_edit': True}"/>
                                <field name="academic_period"
                                       placeholder="Ej: 2024-2025"/>
                            </group>
                            <!-- Fechas -->
                            <group string="Fechas del Curso" name="dates">
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </group>
                        </group>
                        <notebook>
                            <!-- Pestaña de Profesores -->
                            <page string="Profesores" name="teachers">
                                <field name="teacher_ids" widget="many2many"
                                       context="{'default_is_teacher': True}"
                                >
                                    <kanban>
                                        <field name="name"/>
                                        <field name="work_email"/>
                                        <field name="work_phone"/>
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_card oe_kanban_global_click">
                                                    <div class="o_kanban_image">
                                                        <img alt="Avatar"
                                                             t-att-src="kanban_image('hr.employee', 'avatar_128', record.id.raw_value)"/>
                                                    </div>
                                                    <div class="oe_kanban_details">
                                                        <strong class="o_kanban_record_title">
                                                            <field name="name"/>
                                                        </strong>
                                                        <div t-if="record.work_email.value">
                                                            <i class="fa fa-envelope-o"/>
                                                            <field name="work_email"/>
                                                        </div>
                                                        <div t-if="record.work_phone.value">
                                                            <i class="fa fa-phone"/>
                                                            <field name="work_phone"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>
                                </field>
                            </page>
                            <!-- Pestaña de Estudiantes -->
                            <page string="Estudiantes" name="students">
                                <field name="student_ids" widget="many2many"
                                       context="{'default_is_student': True}"
                                >
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="email" optional="hide"/>
                                        <field name="phone" optional="hide"/>
                                        <field name="enrollment_state" string="Estado"/>
                                    </list>
                                </field>
                            </page>
                            <!-- Pestaña de Horarios -->
                            <page string="Horarios" name="schedules">
                                <div class="alert alert-info" role="alert">
                                    <i class="fa fa-info-circle"/>
                                    Define los horarios semanales para esta línea de curso.
                                </div>
                                <field name="schedule_ids" widget="many2many">
                                    <list editable="bottom">
                                        <field name="weekday_name" string="Día"/>
                                        <field name="start_hour" string="Hora Inicio" widget="float_time" readonly="1"/>
                                        <field name="end_hour" string="Hora Fin" widget="float_time" readonly="1"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Materiales">
                                <group>
                                    <field name="box_id"/>
                                    <field name="box_line_ids">
                                        <list editable="bottom">
                                            <field name="product_id"/>
                                            <field name="expected_quantity"/>
                                            <field name="real_quantity"/>
                                        </list>
                                    </field>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="school_course_form_view" model="ir.ui.view">
            <field name="name">school.course.form.view</field>
            <field name="model">oe.school.course</field>
            <field name="arch" type="xml">
                <form string="Courses">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="e.g. Master in Business Administration"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="color" widget="color_picker"/>
                                <!--                                <field name="school_ids" widget="many2many_tags" options="{'no_create': True}"/>-->
                            </group>
                        </group>
                        <notebook>
                            <page string="Programas">
                                <field name="program_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Cursos activos">
                                <field name="course_line_ids">
                                    <list editable="bottom">
                                        <field name="school_id"/>
                                        <field name="student_ids"/>
                                        <field name="teacher_ids" widget="many2many_tags"/>
                                        <field name="schedule_ids" widget="many2many_tags"/>
                                        <field name="attendance_ids"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_course_filter" model="ir.ui.view">
            <field name="name">school.course.search</field>
            <field name="model">oe.school.course</field>
            <field name="arch" type="xml">
                <search string="Courses">
                    <field name="name" string="Nombre"/>
                    <separator/>
                </search>
            </field>
        </record>

        <!--        Acción para abrir sección de cursos-->
        <record id="action_oe_school_course" model="ir.actions.act_window">
            <field name="name">Cursos</field>
            <field name="res_model">oe.school.course</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_course_filter"/>
            <field name="help" type="html">
                <h1>
                    No hay cursos disponibles
                </h1>
                <p class="o_view_nocontent_smiling_face">
                    Crea un nuevo curso
                </p>
            </field>
        </record>
    </data>
</odoo>