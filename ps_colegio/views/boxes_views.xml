<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="oe_boxes_view_form" model="ir.ui.view">
        <field name="name">oe.boxes.view.form</field>
        <field name="model">oe.boxes</field>
        <field name="arch" type="xml">
            <form string="Cajas">
                <header>
                    <button name="action_reponer" string="Modificar Materiales" class="oe_highlight" type="object"/>
                    <button name="action_initial_replenishment" string="ReposiciÃ³n Inicial" class="btn btn-action" type="object" invisible="total_material_movement != 0"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_material_movements"
                                icon="fa-history">
                            <field string="Movimientos" name="material_movement_ids" widget="statinfo"/>
                        </button>
                    </div>

                    <group>
                        <field name="name"/>
                        <field name="products_ids" widget="many2many_tags" invisible="1"/>
                        <notebook>
                            <page string="Materiales dentro de esta caja">
                                <field name="oe_box_line_ids" options="{'no_open': True}">
                                    <list editable="bottom" decoration-warning="quantity_difference != 0">
                                        <field name="image" string="Imagen" widget="image" options="{'size': [60, 60]}"
                                               optional="show" width="10%"/>
                                        <field name="product_id" width="15%"/>
                                        <field name="expected_quantity" width="15%"/>
                                        <field name="real_quantity" width="15%"/>
                                        <field name="quantity_difference" width="15%" readonly="1"/>
                                    </list>
                                </field>
                            </page>

                            <page string="Historial de Movimientos">
                                <field name="material_movement_ids" readonly="0">
                                    <list>
                                        <field name="date"/>
                                        <field name="attendance_id"/>
                                        <field name="product_id"/>
                                        <field name="movement_type"/>
                                        <field name="qty"/>
                                        <field name="notes"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="oe_boxes_view_list" model="ir.ui.view">
        <field name="name">oe.boxes.view.list</field>
        <field name="model">oe.boxes</field>
        <field name="arch" type="xml">
            <list string="Materiales">
                <field name="name"/>
                <field name="alert_icon" widget="html" string=""/>
            </list>
        </field>
    </record>

    <record id="boxes_view_search" model="ir.ui.view">
        <field name="name">boxes.view.search</field>
        <field name="model">oe.boxes</field>
        <field name="arch" type="xml">
            <search string="Search Title">
                <field name="name" string="Name"/>
                <filter string="Con Diferencias" name="diferences" domain="[('diferences','=',True)]"/>
                <separator/>
                <group expand="0" string="Group By">
                    <filter string="Agrupar por Diferencias" name="group_diferences" context="{'group_by':'diferences'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="boxes_action" model="ir.actions.act_window">
        <field name="name">Cajas de materiales</field>
        <field name="res_model">oe.boxes</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_diferences': 1}</field>
    </record>



    <!-- Menu for material boxes -->
    <menuitem name="Cajas de Materiales"
              id="boxes_menu"
              parent="menu_school_materials"
              action="boxes_action"
              sequence="10"/>

    <!-- Menu form material movements -->
    <menuitem name="Movimientos de Materiales"
              id="material_movements_menu"
              parent="menu_school_materials"
              action="material_movement_action"
              sequence="20"/>

    <!-- Menu for product template -->
    <menuitem name="Productos"
              id="product_template_menu"
              parent="menu_school_materials"
              action="product.product_template_action"
              sequence="30"/>
</odoo>