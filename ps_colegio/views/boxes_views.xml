<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="oe_boxes_view_form" model="ir.ui.view">
        <field name="name">oe.boxes.view.form</field>
        <field name="model">oe.boxes</field>
        <field name="arch" type="xml">
            <form string="Cajas">
                <header>
                    <button name="action_reponer" string="Reponer" class="oe_highlight" type="object"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_material_movements"
                                icon="fa-history">
                            <field string="Movimientos" name="material_movement_ids" widget="statinfo"/>
                        </button>
                    </div>

                    <group>
                        <field name="name"/>
                        <notebook>
                            <page string="Materiales dentro de esta caja">
                                <field name="oe_box_line_ids" options="{'no_open': True}">
                                    <list editable="bottom" decoration-warning="quantity_difference != 0">
                                        <field name="image" string="Imagen" widget="image" options="{'size': [60, 60]}"
                                               optional="show"/>
                                        <field name="product_id"/>
                                        <field name="expected_quantity"/>
                                        <field name="real_quantity"/>
                                        <field name="quantity_difference" readonly="1"/>
                                    </list>
                                </field>
                            </page>

                            <page string="Historial de Movimientos">
                                <field name="material_movement_ids" readonly="1">
                                    <list>
                                        <field name="date"/>
                                        <field name="attendance_id"/>
                                        <field name="product_id"/>
                                        <field name="movement_type"/>
                                        <field name="quantity_lost"/>
                                        <field name="quantity_refilled"/>
                                        <field name="notes"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="oe_boxes_view_list" model="ir.ui.view">
        <field name="name">oe.boxes.view.list</field>
        <field name="model">oe.boxes</field>
        <field name="arch" type="xml">
            <list string="Materiales">
                <field name="name"/>
                <field name="alert_icon" widget="html" string=""/>
            </list>
        </field>
    </record>

    <!-- Wizard para reponer -->
    <record id="view_reponer_wizard_form" model="ir.ui.view">
        <field name="name">oe.refill.wizard.form</field>
        <field name="model">oe.refill.wizard</field>
        <field name="arch" type="xml">
            <form string="Reponer Producto">
                <group>
                    <field name="product_id" options="{'no_create': True, 'no_edit': True}"/>
                    <field name="quantity"/>
                    <field name="notes"/>
                </group>
                <footer>
                    <button string="Confirmar" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Cancelar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action del wizard -->
    <record id="action_reponer_wizard" model="ir.actions.act_window">
        <field name="name">Reponer Producto</field>
        <field name="res_model">oe.refill.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Action -->
    <record id="boxes_action" model="ir.actions.act_window">
        <field name="name">Cajas de materiales</field>
        <field name="res_model">oe.boxes</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu for material boxes -->
    <menuitem name="Cajas de Materiales"
              id="boxes_menu"
              parent="menu_school_materials"
              action="boxes_action"
              sequence="10"/>

    <!-- Menu form material movements -->
    <menuitem name="Movimientos de Materiales"
              id="material_movements_menu"
              parent="menu_school_materials"
              action="material_movement_action"
              sequence="20"/>

    <!-- Menu for product template -->
    <menuitem name="Productos"
              id="product_template_menu"
              parent="menu_school_materials"
              action="product.product_template_action"
              sequence="30"/>
</odoo>