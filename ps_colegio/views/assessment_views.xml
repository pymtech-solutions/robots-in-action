<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Kanban view -->
    <record id="oe_assessment_view_kanban" model="ir.ui.view">
        <field name="name">oe.assessment.view.kanban</field>
        <field name="model">oe.assessment</field>
        <field name="arch" type="xml">
            <kanban
                    default_group_by="academic_group"
                    class="o_kanban_example"
                    group_create="true"
                    group_edit="true"
                    group_drag_drop="true"
                    on_create="quick_create">
                <field name="name"/>
                <field name="academic_group_sequence"/>

                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <div class="o_kanban_record_top mb-2">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <span class="text-primary">
                                                <field name="name"/>
                                            </span>
                                        </strong>
                                    </div>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="mt-2">
                                        <span class="text-muted">Grupo: </span>
                                        <field name="course_id"/>
                                    </div>
                                    <div class="mt-2">
                                        <span class="text-muted">Programa: </span>
                                        <field name="program_id"/>
                                    </div>
                                    <div class="mt-2">
                                        <span class="text-muted">Trimestre: </span>
                                        <field name="trimester"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <small class="text-muted">
                                            <i class="fa fa-building-o" role="img" aria-label="Compañía"/>
                                            <span> </span>
                                            <field name="school_id"/>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
                <script type="text/javascript">
                    // Expandir todos los grupos al cargar
                    $(document).ready(function() {
                    $('.o_kanban_group_title').each(function() {
                    if ($(this).parent().hasClass('o_column_folded')) {
                    $(this).click();
                    }
                    });
                    });
                </script>

            </kanban>
        </field>
    </record>

    <!-- Form View -->
    <record id="oe_assessment_view_form" model="ir.ui.view">
        <field name="name">oe.assessment.view.form</field>
        <field name="model">oe.assessment</field>
        <field name="arch" type="xml">
            <form string="Assessment">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="trimester"/>
                        <field name="teacher_ids" widget="many2many_tags"/>
                        <field name="course_line_id" widget="many2one"/>
                        <notebook>
                            <page string="Calificaciones">
                                <field name="assessment_line_ids">
                                    <list editable="bottom">
                                        <field name="student_id"/>
                                        <field name="cognitive_capacity"/>
                                        <field name="dexterity"/>
                                        <field name="logic_reasoning"/>
                                        <field name="creativity"/>
                                        <field name="learning_improvement"/>
                                        <field name="teamwork"/>
                                        <field name="motivation"/>
                                        <field name="attitude"/>
                                        <field name="comments"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Lista de estudiantes">
                                <field name="student_ids">

                                </field>
                            </page>
                        </notebook>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="oe_assessment_view_list" model="ir.ui.view">
        <field name="name">oe.assessment.view.list</field>
        <field name="model">oe.assessment</field>
        <field name="arch" type="xml">
            <list string="Assessment">
                <field name="teacher_ids" widget="many2many_tags"/>
                <!--                <field name="course_line_ids" widget="many2many_tags"/>-->
            </list>
        </field>
    </record>

    <!-- List View -->
    <record id="oe_assessment_line_view_list" model="ir.ui.view">
        <field name="name">oe.assessment.line.view.list</field>
        <field name="model">oe.assessment.line</field>
        <field name="arch" type="xml">
            <list string="Assessment">
                <field name="student_id"/>
                <field name="cognitive_capacity"/>
                <field name="dexterity"/>
                <field name="logic_reasoning"/>
                <field name="creativity"/>
                <field name="learning_improvement"/>
                <field name="teamwork"/>
                <field name="motivation"/>
                <field name="attitude"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="assessment_action" model="ir.actions.act_window">
        <field name="name">Assessment</field>
        <field name="res_model">oe.assessment</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first assessment!
            </p>
        </field>
    </record>

</odoo>