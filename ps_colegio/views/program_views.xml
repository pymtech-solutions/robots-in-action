<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="program_view_form" model="ir.ui.view">
        <field name="name">program.view.form</field>
        <field name="model">oe.program</field>
        <field name="arch" type="xml">
            <form string="Programa">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="course_id" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_oe_school_program" model="ir.actions.act_window">
        <field name="name">Programas</field>
        <field name="res_model">oe.program</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No existe ningún programa todavía
            </p>
        </field>
    </record>
</odoo>
