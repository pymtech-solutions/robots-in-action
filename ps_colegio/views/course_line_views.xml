<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view -->
    <record id="course_line_form_view" model="ir.ui.view">
        <field name="name">oe.school.course.line.form</field>
        <field name="model">oe.school.course.line</field>
        <field name="arch" type="xml">
            <form string="Línea de Curso">
                <sheet>
                    <!-- Título dinámico -->
                    <div class="oe_title">
                        <h1>
                            <field name="display_name" readonly="1"
                                   placeholder="Se generará automáticamente"/>
                        </h1>
                    </div>
                    <group>
                        <!-- Información básica -->
                        <group string="Información Básica" name="basic_info">
                            <field name="school_id"
                                   options="{'no_create': True, 'no_create_edit': True}"
                                   required="1"/>
                            <field name="course_id"
                                   options="{'no_create': True, 'no_create_edit': True}"
                                   required="1"/>
                            <field name="program_id"
                                   domain="[('id', 'in', related_program_ids)]"
                                   options="{'no_create': True, 'no_create_edit': True}"/>
                            <field name="academic_period"
                                   placeholder="Ej: 2024-2025"/>
                        </group>
                        <!-- Fechas -->
                        <group string="Fechas del Curso" name="dates">
                            <field name="start_date"/>
                            <field name="end_date"/>
                        </group>
                    </group>
                    <notebook>
                        <!-- Pestaña de Profesores -->
                        <page string="Profesores" name="teachers">
                            <field name="teacher_ids" widget="many2many"
                                   context="{
           'default_is_teacher': True,
           'form_view_ref': 'ps_colegio.student_primary_form_view'
       }">
                                <kanban>
                                    <field name="name"/>
                                    <field name="work_email"/>
                                    <field name="work_phone"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_card oe_kanban_global_click">
                                                <div class="o_kanban_image">
                                                    <img alt="Avatar"
                                                         t-att-src="kanban_image('hr.employee', 'avatar_128', record.id.raw_value)"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <strong class="o_kanban_record_title">
                                                        <field name="name"/>
                                                    </strong>
                                                    <div t-if="record.work_email.value">
                                                        <i class="fa fa-envelope-o"/>
                                                        <field name="work_email"/>
                                                    </div>
                                                    <div t-if="record.work_phone.value">
                                                        <i class="fa fa-phone"/>
                                                        <field name="work_phone"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <form>

                                </form>
                            </field>
                        </page>
                        <!-- Pestaña de Estudiantes -->

                        <page string="Estudiantes" name="students">
                            <field name="student_ids" widget="many2many_kanban">
                                <kanban>
                                    <field name="name"/>
                                    <field name="email"/>
                                    <field name="phone"/>
                                    <field name="image_128"/> <!-- si quieres mostrar la foto del estudiante -->
                                    <templates>
                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_card oe_kanban_global_click">
                                                <div class="o_kanban_image">
                                                    <img t-att-src="kanban_image('res.partner', 'image_128', record.id.value)"
                                                         t-att-alt="record.name.value"/>
                                                </div>
                                                <div class="o_kanban_details">
                                                    <div>
                                                        <strong>
                                                            <field name="name"/>
                                                        </strong>
                                                    </div>
                                                    <div>
                                                        <i class="fa fa-envelope-o"/>
                                                        <field name="email" optional="hide"/>
                                                    </div>
                                                    <div>
                                                        <i class="fa fa-phone"/>
                                                        <field name="phone" optional="hide"/>
                                                    </div>
                                                    <div>
                                                        <field name="enrollment_state" string="Estado"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>

                        <!-- Pestaña de Horarios -->
                        <page string="Horarios" name="schedules">
                            <div class="alert alert-info" role="alert">
                                <i class="fa fa-info-circle"/>
                                Define los horarios semanales para esta línea de curso.
                            </div>
                            <field name="schedule_ids" widget="many2many">
                                <list editable="bottom">
                                    <field name="weekday_name" string="Día"/>
                                    <field name="start_hour" string="Hora Inicio" widget="float_time" readonly="1"/>
                                    <field name="end_hour" string="Hora Fin" widget="float_time" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Cajas">
                            <group>
                                <field name="box_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Course line action -->
    <record id="action_oe_school_course_line" model="ir.actions.act_window">
        <field name="name">Lineas de curso</field>
        <field name="res_model">oe.school.course.line</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Lineas de curso
            </p>
        </field>
    </record>
</odoo>