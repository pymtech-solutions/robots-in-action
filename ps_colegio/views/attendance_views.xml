<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="course_line_attendance_list_view" model="ir.ui.view">
            <field name="name">course.line.attendance.tree.view</field>
            <field name="model">oe.attendance</field>
            <field name="arch" type="xml">
                <list>
                    <field name="date"/>
                    <field name="school_id" readonly="1"/>
                    <field name="course_line_id"/>
                    <field name="course_schedule_ids" widget="many2many_tags" readonly="1"/>
                    <field name="teacher_ids" widget="many2many_tags" readonly="1"/>
                    <field name="substitute_teacher_ids" widget="many2many_tags"/>
                    <field name="materials_status"/>
                    <field name="has_material_issues" invisible="1"/>
                    <field name="total_materials_lost"/>
                    <field name="total_materials_damaged"/>
                </list>
            </field>
        </record>

        <record id="course_line_attendance_form_view" model="ir.ui.view">
            <field name="name">course.line.attendance.form.view</field>
            <field name="model">oe.attendance</field>
            <field name="arch" type="xml">
                <form string="Attendance">
                    <header>
                        <button name="action_close_materials" string="Cerrar asistencia"
                                type="object" class="btn-success" invisible="materials_status == 'closed'"/>
                        <button name="action_reopen_materials" string="Reabrir asistencia"
                                type="object" class="btn-warning" invisible="materials_status != 'closed'"/>
                        <field name="materials_status" widget="statusbar"
                               statusbar_visible="review,closed"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="action_view_material_movements"
                                    icon="fa-exchange">
                                <field string="Movimientos" name="material_movement_ids" widget="statinfo"/>
                            </button>
                        </div>

                        <group>
                            <group>
                                <field name="course_line_id"/>
                                <field name="school_id" readonly="1"/>
                                <field name="date"/>
                            </group>
                            <group>
                                <field name="course_schedule_ids" widget="many2many_tags" readonly="1"/>
                                <field name="teacher_ids" widget="many2many_tags" readonly="1"/>
                                <field name="substitute_teacher_ids" widget="many2many_tags"/>
                                <field name="box_id" readonly="1"/>
                            </group>
                        </group>

                        <!-- Resumen de materiales -->
                        <group string="Resumen de Materiales">
                            <group>
                                <field name="total_materials_lost"/>
                                <field name="total_materials_damaged"/>
                            </group>
                            <group>
                                <field name="has_material_issues" invisible="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Registros de Asistencia">
                                <field name="attendance_line_ids">
                                    <list editable="bottom">
                                        <field name="student_id" domain="[('id', 'in', student_domain_ids)]"/>
                                        <field name="attended"/>
                                    </list>
                                </field>
                            </page>

                            <page string="Control de Materiales">
                                <field name="attendance_material_line_ids">
                                    <list editable="bottom"
                                          decoration-danger="lost_quantity > 0 or damaged_quantity > 0">
                                        <field name="product_id"/>
                                        <field name="original_expected_quantity" readonly="1"
                                               string="Cant. Original Esperada"/>
                                        <field name="original_real_quantity" readonly="1" string="Cant. Original Real"/>
                                        <field name="current_quantity" string="Cant. Actual"/>
                                        <field name="lost_quantity" string="Perdidas"/>
                                        <field name="damaged_quantity" string="DaÃ±ados"/>
                                        <field name="total_difference" readonly="1" string="Diferencia"/>
                                        <field name="notes" placeholder="Observaciones..."/>
                                    </list>
                                </field>
                            </page>

                            <page string="Historial de Movimientos">
                                <field name="material_movement_ids" readonly="1">
                                    <list>
                                        <field name="date"/>
                                        <field name="product_id"/>
                                        <field name="movement_type"/>
                                        <field name="quantity_before"/>
                                        <field name="quantity_after"/>
                                        <field name="quantity_lost"/>
                                        <field name="notes"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!--        Attendance action-->
        <record id="action_oe_school_attendance" model="ir.actions.act_window">
            <field name="name">Assistance</field>
            <field name="res_model">oe.attendance</field>
            <field name="view_mode">list,form</field>
            <field name="context">
                {
                'group_by': 'date',
                'orderedBy': [{'name': 'date', 'asc': False}]
                }
            </field>
            <field name="help" type="html">
                <p>
                    No hay ninguna asistencia que mostrar.
                </p>
            </field>
        </record>
    </data>
</odoo>