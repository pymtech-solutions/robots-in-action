<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="oe_attendance_cron" model="ir.cron">
            <field name="name">Auto calculate attendance cron</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="model_id" ref="model_school_attendance"/>
            <field name="state">code</field>
            <field name="code">model.create_attendance_with_lines()</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).replace(hour=6, minute=0, second=0)"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>