<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="oe_assessment_report_action_report" model="ir.actions.report">
        <field name="name">Oe assessment report Report</field>
        <field name="model">oe.assessment</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">ps_colegio.report_oe_assessment_report_document</field>
        <field name="report_file">ps_colegio.report_oe_assessment_report_document</field>
        <field name="binding_model_id" ref="model_oe_assessment"/>
        <field name="binding_type">report</field>
        <field name="paperformat_id" ref="base.paperformat_euro"/>
    </record>

    <template id="report_oe_assessment_report_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <style>
                        /* General page styles */
                        @page {
                        size: A4;
                        margin: 2cm;
                        }

                        body {
                        font-family: sans-serif;
                        font-size: 11pt;
                        color: #0A1425;
                        }

                        h1, h2 {
                        margin: 0;
                        }

                        .header-blue {
                        background-color: #0B80E6;
                        color: white;
                        padding: 10pt;
                        text-align: center;
                        }

                        .info-section {
                        display: flex;
                        justify-content: space-between;
                        margin-top: 20pt;
                        gap: 20pt;
                        }

                        .info-column {
                        flex: 1;
                        }

                        .info-text {
                        border-bottom: 1px solid #0A1425;
                        padding-bottom: 3pt;
                        margin-bottom: 10pt;
                        }

                        .eval-section {
                        display: flex;
                        flex-wrap: wrap;
                        justify-content: space-between;
                        margin-top: 20pt;
                        }

                        .eval-subsection {
                        flex: 0 0 78%; /* Leaves room for right column */
                        }

                        .subject {
                        display: flex;
                        align-items: center;
                        margin-bottom: 8pt;
                        }

                        .subject p {
                        background-color: #0B80E6;
                        color: white;
                        padding: 4pt 10pt;
                        flex-grow: 1;
                        display: flex;
                        align-items: center;
                        height: 25pt;
                        box-sizing: border-box;
                        }

                        .score {
                        border: 2pt solid #0A1425;
                        width: 30pt;
                        height: 25pt;
                        margin-left: 10pt;
                        }

                        .eval-sys {
                        background-color: #0B80E6;
                        color: white;
                        flex: 0 0 20%;
                        padding: 10pt;
                        box-sizing: border-box;
                        text-align: center;
                        font-size: 10pt;
                        margin-top: 0;
                        }

                        .eval-sys p {
                        margin: 4pt 0;
                        }

                        .eval-number {
                        font-size: 18pt;
                        margin: 0;
                        font-weight: bold;
                        }

                        #cal-text {
                        font-weight: bold;
                        margin-bottom: 10pt;
                        }

                        .observations {
                        background-color: mediumorchid;
                        color: white;
                        padding: 10pt;
                        margin-top: 20pt;
                        }

                        .observations p {
                        margin: 5pt 0;
                        }

                    </style>

                    <div class="header-blue">
                        <h1>EVALUACIÓN TRIMESTRAL</h1>
                    </div>

                    <div class="info-section">
                        <div class="info-column">
                            <p class="info-text">Nombre del colegio</p>
                            <p class="info-text">Nombre del hijo/a</p>
                        </div>
                        <div class="info-column">
                            <p class="info-text">Periodo de evaluación</p>
                            <p class="info-text">Curso</p>
                        </div>
                    </div>

                    <h2 style="text-align: center; margin-top: 20pt;">ROBÓTICA</h2>

                    <div class="eval-section">
                        <div class="eval-subsection">
                            <div class="subject">
                                <p>Capacidad cognitiva</p>
                                <div class="score"></div>
                            </div>
                            <div class="subject">
                                <p>Destreza manual</p>
                                <div class="score"></div>
                            </div>
                            <div class="subject">
                                <p>Lógica y razonamiento</p>
                                <div class="score"></div>
                            </div>
                            <div class="subject">
                                <p>Creatividad</p>
                                <div class="score"></div>
                            </div>
                            <div class="subject">
                                <p>Mejora en el aprendizaje</p>
                                <div class="score"></div>
                            </div>
                            <div class="subject">
                                <p>Trabajo grupal</p>
                                <div class="score"></div>
                            </div>
                            <div class="subject">
                                <p>Motivación</p>
                                <div class="score"></div>
                            </div>
                            <div class="subject">
                                <p>Actitud</p>
                                <div class="score"></div>
                            </div>
                        </div>

                        <div class="eval-sys">
                            <p id="cal-text">SISTEMA DE<br/>CALIFICACIÓN
                            </p>
                            <p class="eval-number">5</p>
                            <p>Excelente</p>
                            <p class="eval-number">4</p>
                            <p>Muy bien</p>
                            <p class="eval-number">3</p>
                            <p>Bien</p>
                            <p class="eval-number">2</p>
                            <p>Necesita mejorar</p>
                            <p class="eval-number">1</p>
                            <p>Suspendido</p>
                        </div>
                    </div>

                    <div class="observations">
                        <p>OBSERVACIONES</p>
                        <p>Nombre del Profesor/a:</p>
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>