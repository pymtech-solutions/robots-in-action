<?xml version="1.0" encoding="utf-8" standalone="no"?>
<odoo>
    <!--List view-->
    <record id="school_subject_view_list" model="ir.ui.view">
        <field name="name">school.subject.view.list</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="code"/>
            </list>
        </field>
    </record>

    <!--Form view-->
    <record id="school_subject_view_form" model="ir.ui.view">
        <field name="name">school.subject.view.form</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="ej. Marc Demo"/>
                        </h1>
                    </div>
                    <group>
                        <field name="code"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Search view-->
    <record id="school_subject_view_search" model="ir.ui.view">
        <field name="name">school.subject.view.search</field>
        <field name="model">school.subject</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" string="Nombre"/>
                <field name="code" string="CÃ³digo"/>
            </search>
        </field>
    </record>

    <!--Action-->
    <record id="school_subject_action" model="ir.actions.act_window">
        <field name="name">Asignaturas</field>
        <field name="res_model">school.subject</field>
        <field name="view_mode">list,form</field>
    </record>


    <!--Menuitem-->
    <menuitem action="school_subject_action"
              id="menu_school_subject"
              parent="menu_school_courses"
              name="Asignaturas"
              sequence="4"
    />
</odoo>