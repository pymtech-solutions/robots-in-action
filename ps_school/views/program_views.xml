<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--Form view-->
    <record id="program_view_form" model="ir.ui.view">
        <field name="name">program.view.form</field>
        <field name="model">school.program</field>
        <field name="arch" type="xml">
            <form string="Programa">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="course_id" widget="many2many_tags"/>
                    </group>
                    <notebook>
                        <page string="Materias">
                            <field name="subject_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--Inherit chatter-->
    <record id="view_contrato_chatter_form_inherit" model="ir.ui.view">
        <field name="name">school.program.chatter</field>
        <field name="model">school.program</field>
        <field name="inherit_id" ref="program_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="after">
                <chatter/>
            </xpath>
        </field>
    </record>

    <!--Action-->
    <record id="action_school_program" model="ir.actions.act_window">
        <field name="name">Programas</field>
        <field name="res_model">school.program</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No existe ningún programa todavía
            </p>
        </field>
    </record>

    <!--Menuitem-->
    <menuitem name="Programas"
              id="menu_school_programs"
              parent="menu_school_courses"
              action="action_school_program"
              groups="ps_school.group_school_teacher,ps_school.group_school_manager"
              sequence="3"/>
</odoo>
