<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Course -->
        <record id="school_course_tree_view" model="ir.ui.view">
            <field name="name">school.course.tree.view</field>
            <field name="model">school.course</field>
            <field name="arch" type="xml">
                <list string="Cursos">
                    <field name="display_name"/>
                    <field name="color" widget="color_picker"/>
                </list>
            </field>
        </record>


        <record id="school_course_form_view" model="ir.ui.view">
            <field name="name">school.course.form.view</field>
            <field name="model">school.course</field>
            <field name="arch" type="xml">
                <form string="Cursos">
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name" placeholder="e.g. Master in Business Administration"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="color" widget="color_picker"/>
                                <!--                                <field name="school_ids" widget="many2many_tags" options="{'no_create': True}"/>-->
                            </group>
                        </group>
                        <notebook>
                            <page string="Programas">
                                <field name="program_ids">
                                    <list editable="bottom">
                                        <field name="name"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Cursos activos">
                                <field name="course_line_ids">
                                    <list editable="bottom">
                                        <field name="school_id"/>
                                        <field name="student_ids"/>
                                        <field name="teacher_ids" widget="many2many_tags"/>
                                        <field name="schedule_ids" widget="many2many_tags"/>
                                        <field name="attendance_ids"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_course_filter" model="ir.ui.view">
            <field name="name">school.course.search</field>
            <field name="model">school.course</field>
            <field name="arch" type="xml">
                <search string="Cursos">
                    <field name="name" string="Nombre"/>
                    <separator/>
                </search>
            </field>
        </record>

        <!--        Acción para abrir sección de cursos-->
        <record id="action_school_course" model="ir.actions.act_window">
            <field name="name">Cursos</field>
            <field name="res_model">school.course</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="view_course_filter"/>
            <field name="help" type="html">
                <h1>
                    No hay cursos disponibles
                </h1>
                <p class="o_view_nocontent_smiling_face">
                    Crea un nuevo curso
                </p>
            </field>
        </record>

        <!--Menuitem-->
        <menuitem name="Cursos"
                  id="menu_school_courses"
                  parent="menu_school"
                  sequence="30"
                  groups="ps_school.group_school_teacher,ps_school.group_school_manager"/>

        <!--Child menuitem-->
        <menuitem name="Cursos"
                  id="menu_school_courses_list"
                  parent="menu_school_courses"
                  action="action_school_course"
                  groups="ps_school.group_school_teacher,ps_school.group_school_manager"
                  sequence="1"/>
    </data>
</odoo>