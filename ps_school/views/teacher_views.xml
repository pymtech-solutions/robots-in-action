<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--List view-->
        <record id="teacher_list_view_inherit" model="ir.ui.view">
            <field name="name">teacher.list.view.inherit</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_simple_form"/>
            <field name="arch" type="xml">
                <!-- Add fields to an existing group -->
                <xpath expr="//field[@name = 'email']" position="after">
                    <field name="school_ids"/>
                </xpath>
            </field>
        </record>

        <!-- Form view -->
        <record id="view_employee_form_inherit_teacher" model="ir.ui.view">
            <field name="name">view.employee.form.inherit.teacher</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name = 'category_ids']" position="after">
                    <field name="is_teacher"/>
                    <field name="school_ids" widget="many2many_tags"/>
                </xpath>
                <xpath expr="//notebook[1]" position="inside">
                    <page string="Clases" invisible="not is_teacher">
                        <group>
                            <field name="schedule_ids" widget="many2many_tags"/>
                        </group>
                        <field name="subject_line_ids">
                            <list>
                                <field name="school_id"/>
                                <field name="course_id"/>
                                <field name="program_id"/>
                                <field name="schedule_ids" widget="many2many_tags"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </list>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="teacher_tree_view_inherit" model="ir.ui.view">
            <field name="name">teacher.list.view.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_tree"/>
            <field name="arch" type="xml">
                <!-- Add fields to an existing group -->
                <xpath expr="//field[@name = 'parent_id']" position="after">
                    <field name="school_ids" widget="many2many_tags"/>
                    <field name="schedule_ids" widget="many2many_tags"/>
                    <field name="schedule_text"/>
                </xpath>
            </field>
        </record>

        <record id="teacher_kanban_view_inherit" model="ir.ui.view">
            <field name="name">teacher.list.view.inherit</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.hr_kanban_view_employees"/>
            <field name="arch" type="xml">
                <xpath expr="//kanban/templates/t[@t-name='card']//field[@name='name']" position="after">
                    <field name="school_ids" widget="many2many_tags"/>
                </xpath>
            </field>
        </record>

        <!--Acción para abrir sección de profesores-->
        <record id="action_hr_employees_teachers"
                model="ir.actions.act_window">
            <field name="name">Teacher</field>
            <field name="res_model">hr.employee</field>
            <field name="view_mode">kanban,list,form</field>
            <field name="context">{'default_is_teacher': True}</field>
            <field name="domain">[('is_teacher', '=', True)]</field>
            <field name="view_ids"
                   eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'kanban', 'view_id': ref('hr.hr_kanban_view_employees')}),
                (0, 0, {'view_mode': 'list', 'view_id': ref('hr.view_employee_tree')}),
                (0, 0, {'view_mode': 'form', 'view_id': ref('hr.view_employee_form')})]"/>
        </record>

        <!--Main school menu-->
        <menuitem name="School"
                  id="menu_school"
                  web_icon="ps_school,static/description/icon.png"
                  sequence="55"
                  groups="ps_school.group_school_teacher,ps_school.group_school_manager"/>

        <!--Menu item-->
        <menuitem name="Profesores"
                  id="menu_school_teachers_list"
                  parent="menu_school"
                  action="action_hr_employees_teachers"
                  groups="ps_school.group_school_teacher,ps_school.group_school_manager"
                  sequence="1"/>
    </data>
</odoo>