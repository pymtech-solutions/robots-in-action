<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="schedule_view_form" model="ir.ui.view">
        <field name="name">schedule.view.form</field>
        <field name="model">school.schedule</field>
        <field name="arch" type="xml">
            <form string="Horario">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Horario">
                            <field name="start_hour" widget="float_time"/>
                            <field name="end_hour" widget="float_time"/>
                            <field name="weekday"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--Schedule action-->
    <record id="action_school_schedule" model="ir.actions.act_window">
        <field name="name">Horarios</field>
        <field name="res_model">school.schedule</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No existen horarios
            </p>
        </field>
    </record>

    <!--Menuitem-->
    <menuitem name="Horarios"
              id="menu_school_schedule_list"
              parent="menu_school_courses"
              action="action_school_schedule"
              groups="ps_school.group_school_teacher,ps_school.group_school_manager"
              sequence="20"/>
</odoo>