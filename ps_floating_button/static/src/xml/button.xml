<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="ps_floating_button.FloatingButton">
        <button class="btn rounded-circle position-fixed shadow"
                t-attf-style="width: 60px; height: 60px; z-index: 9999; bottom: {{state.y || '5'}}vh; right: {{state.x || '2'}}vw; padding: 0; border: none; background: transparent;"
                t-on-click="onClick">
            <img src="/ps_floating_button/static/src/img/floating_button.png"
                 alt="Chat"
                 style="width: 100%; height: 100%; object-fit: contain;"/>
        </button>
    </t>
</templates>
