<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit Form View -->
    <record id="res_partner_view_form_ria" model="ir.ui.view">
        <field name="name">res.partner.view.form.inherit.ria</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='is_school']" position="after">
                <field name="logo_in_grade" widget="boolean_toggle" invisible="not is_school"/>
            </xpath>
        </field>
    </record>
</odoo>